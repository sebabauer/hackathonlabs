<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created_by</th>
      <th>Short description</th>
      <th>Long description</th>
      <th>Category</th>
      <th>Phase</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.user.try(:name) %></td>
        <td><%= idea.short_description %></td>
        <td><%= idea.long_description %></td>
        <td><%= idea.category %></td>
        <td><%= idea.phase %></td>
        <td><%= image_tag idea.picture.card %></td>

        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
